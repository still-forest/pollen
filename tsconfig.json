{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "."
  },
  "include": ["**/*.ts", "**/*.mjs", "**/*.cjs", "**/*.js"],
  "exclude": ["node_modules", "dist"]
}
